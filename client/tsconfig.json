{
  // https://nuxt.com/docs/guide/concepts/typescript
  "extends": "./.nuxt/tsconfig.json",
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "node",
    "strict": true,
    "jsx": "preserve",
    "isCustomElement": true,
//    "paths": {
//      "components/*": ["src/components/*"]
//    }
  },
  "include": [
    "components/**/*.ts",
    "components/**/*.d.ts",
    "components/**/*.tsx",
    "components/**/*.vue",
    "modules/**/*.ts",
    "modules/**/*.d.ts",
    "modules/**/*.tsx",
    "modules/**/*.vue",
    "layouts/**/*.ts",
    "layouts/**/*.d.ts",
    "layouts/**/*.tsx",
    "layouts/**/*.vue",
    "plugins/**/*.ts"
  ],
  "exclude": ["node_modules"]
}
